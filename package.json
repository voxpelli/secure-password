{
  "name": "secure-password",
  "version": "4.0.0",
  "description": "Making Password storage safer for all",
  "type": "module",
  "exports": "./index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "index.d.ts.map"
  ],
  "engines": {
    "node": "^20.15.0 || >=22.2.0"
  },
  "dependencies": {
    "@types/nanoassert": "^2.0.3",
    "@types/sodium-native": "^2.3.9",
    "nanoassert": "^1.0.0",
    "sodium-native": "^3.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.1",
    "@voxpelli/eslint-config": "^23.0.0",
    "@voxpelli/tsconfig": "^15.1.2",
    "c8": "^10.1.3",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "installed-check": "^9.3.0",
    "knip": "^5.61.0",
    "npm-run-all2": "^8.0.1",
    "type-coverage": "^2.29.7",
    "typescript": "~5.8.3"
  },
  "scripts": {
    "build:0": "run-s clean",
    "build:1-declaration": "tsc -p declaration.tsconfig.json",
    "build": "run-s build:*",
    "check:installed-check": "installed-check",
    "check:knip": "knip",
    "check:lint": "eslint",
    "check:tsc": "tsc",
    "check:type-coverage": "type-coverage --detail --strict --at-least 99 --ignore-files 'test/*'",
    "check": "run-s clean && run-p check:*",
    "clean:declarations-top": "rm -rf $(find . -maxdepth 1 -type f -name '*.d.ts*')",
    "clean": "run-p clean:*",
    "prepare": "husky",
    "prepublishOnly": "run-s build",
    "test:node": "c8 --reporter=lcov --reporter=text node --test",
    "test-ci": "run-s test:*",
    "test": "run-s check test:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emilbayes/secure-password.git"
  },
  "keywords": [
    "password",
    "secure",
    "argon2",
    "libsodium",
    "sodium",
    "credentials"
  ],
  "author": "Emil Bay <github@tixz.dk>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/emilbayes/secure-password/issues"
  },
  "homepage": "https://github.com/emilbayes/secure-password#readme"
}
